<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="42sp"
    android:padding="3sp">

    <ImageView
        android:id="@+id/dataItemArrow"
        android:layout_width="15sp"
        android:layout_height="42sp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="2sp"
        android:src="@drawable/arrow_down"
        android:background="#ffffff"/>

    <org.autojs.autoxjs.ui.widget.LevelBeamView
        android:id="@+id/dataItemLevelBeam"
        android:layout_width="wrap_content"
        android:layout_height="42sp"
        android:layout_toEndOf="@+id/dataItemArrow"
        android:background="#eeffffff"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="42sp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3sp"
        android:layout_marginRight="3sp"
        android:layout_toEndOf="@+id/dataItemLevelBeam"
        android:gravity="start|center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dataItemName"
            android:layout_width="1000sp"
            android:layout_height="match_parent"
            android:maxLines="3"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            android:paddingStart="2sp"
            android:background="#ddffffff"
            tools:text="TextView" />

        <TextView
            android:id="@+id/dataItemInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:visibility="gone"/>
    </LinearLayout>

</RelativeLayout>